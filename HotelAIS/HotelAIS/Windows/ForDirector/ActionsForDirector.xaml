<Window x:Class="HotelAIS.Windows.ForDirector.ActionsForDirector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HotelAIS.Windows.ForDirector"
        
        mc:Ignorable="d"
        Title="ActionsForDirector" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Меню действий для директора" FontSize="18" HorizontalAlignment="Center" />
            <Line Height="30" />

            <Button x:Name="StatisticMoneyBtn" Content="Собрать статистику по доходам" Click="StatisticMoneyBtn_OnClick" Margin="276,10" />
            <Button x:Name="StatisticGuestsBtn" Content="Собрать статистику по кол-ву гостей" Click="StatisticGuestsBtn_OnClick" Margin="276,10" />
            <Button x:Name="StatisticFreeRoomBtn" Content="Собрать статистику по кол-ву свободных мест" Click="StatisticFreeRoomBtn_OnClick" Margin="250,10" />
            
            <!-- <Line Height="30" /> -->
            <!-- <Button x:Name="ReturnButton" Content="Назад" Click="" Margin="318,10" /> -->
        </StackPanel>
    </Grid>
</Window>
