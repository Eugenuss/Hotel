<Window x:Class="HotelAIS.ChangeInfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HotelAIS"
        mc:Ignorable="d"
        Title="ChangeInfWindow" Height="300" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <DataGrid x:Name="ChangeData" HeadersVisibility="All"
                      IsReadOnly="True">
            </DataGrid >
            <TextBox x:Name="BookingStat" Text="Статус брони" Margin="0,50,450,0"/>
            <TextBox x:Name="BusyStat" Text="Занятось" Margin="0,10,450,0"/>
            <Button x:Name="Изменить" Content="Изменить" 
                    Width="100" Height="20" Margin="0,20,490,0" Click="Change_Click"/>
            <Button x:Name="Назад" Content="Назад" 
                    Width="100" Height="20" Margin="0,20,490,0" Click="Return_Click"/>
        </StackPanel>
    </Grid>
</Window>
