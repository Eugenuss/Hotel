<Window x:Class="HotelAIS.Windows.Reception.MenuFreeRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HotelAIS.Windows.Reception"
        mc:Ignorable="d"
        Title="MenuFreeRoom" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ScrollViewer Height="348">
                <StackPanel VerticalAlignment="Top">
                    <DataGrid x:Name="RoomsFreeData" HeadersVisibility="All">
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
            <Line Height="20"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ReturnButton" Content="Назад" Width="79" Height="27" Margin="600, 0, 0, 0" 
                        Click="ReturnButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
